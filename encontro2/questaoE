#include<stdio.h>

int main(){
    int n = 0;

    scanf("%i", &n);

    int v[n][n];

    for(int i=0; i<n; i++){
        for (int j=0; j<n; j++){
            scanf("%i", &v[i][j]);
        }
    }

    int menor = 999999;
    int a, b;

    for(int i=0; i<n; i++){
        for (int j=0; j<n; j++){
           if(v[i][j] < menor){
                menor = v[i][j];
                a = i;
                b = j;
           }
        }
    }

    if(a == 0 && b == 0)
        printf("0");
    if(a == 0 && b != 0)
        printf("1");
    if(a != 0 && b != 0)
        printf("2");
    if(a != 0 && b == 0)
        printf("3");
}
